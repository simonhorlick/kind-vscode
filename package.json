{
  "name": "kind-vscode",
  "description": "A Kind language server and client for Visual Studio Code",
  "author": "Simon Horlick",
  "license": "MIT",
  "version": "0.6.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/simonhorlick/kind-vscode"
  },
  "publisher": "simonhorlick",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.43.0"
  },
  "activationEvents": [
    "onLanguage:kind",
    "workspaceContains:**/*.kind"
  ],
  "languages": [
    {
      "id": "kind",
      "aliases": [
        "Kind",
        "kind"
      ],
      "extensions": [
        ".kind"
      ]
    }
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "kind",
        "aliases": [
          "Kind",
          "kind"
        ],
        "extensions": [
          ".kind"
        ]
      }
    ]
  },
  "scripts": {
    "build": "rm server/out/kind.js; cd src; kind Lsp --js | js-beautify >> ../server/out/kind.js",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.3",
    "@types/node": "^12.12.0",
    "@typescript-eslint/parser": "^2.3.0",
    "eslint": "^6.4.0",
    "mocha": "^8.1.1",
    "typescript": "^4.0.2"
  }
}
